            img.right-pointer-img(src="/images/pointer-white.svg")
  
  .products-main-container            
    section.primary-column
      section.buttons.d-flex
        button.signin.control.blk.text-center.text-center.transparent.border-1.bold.mr-15(type="button") Reset 
        button.signin.control.blk.text-center.text-center.transparent.no-border.bold.text-white.bg-nav#done(type='button') Done
      section.filter-section
        a.dpment-head.head-toggler#dpt-toggle Departments
        ul.content-toggle#dpt-toggle
        li.depment-single-level #[a(href="#") Face]
        li.depment-single-level #[a(href="#") Eye]
        li.depment-single-level #[a(href="#") Lips]
        li.depment-single-level #[a(href="#") Makeup Brushes & Tools]
  
      section.filter-section
        a.dpment-head.head-toggler#type-toggle Type
        div.content-toggle#type-toggle
          div.chkbox-area
            input.filter(type="checkbox",id="foundation")
            label(for="foundation") 
              span.check
              |Foundation
  
          div.chkbox-area
            input.filter(type="checkbox",id="something1")
            label(for="something1")
              span.check
              |Foundation
  
          div.chkbox-area
            input.filter(type="checkbox",id="something2")
            label(for="something2") 
              span.check
              |Foundation
  
          div.chkbox-area
            input.filter(type="checkbox",id="something3")
            label(for="something3")
              span.check
              |Foundation
  
          div.chkbox-area
            input.filter(type="checkbox",id="something4")
            label(for="something4")
              span.check
              |Foundation              
    section.secondary-column
 
                      
        section.g-list-cont
          h3.text-center  Women's Collection
          ul.g-list 
            if makeups   
              for makeup in makeups
                  li.g-list-item
                    a.g-list-item(href="/"+makeup.url+'/'+makeup._id)
                      .g-list-img.d-flex.flex-col.align-items-center.justify-center
                        if makeup.images.length >= 1 
                        img.control(src="https://s3.eu-west-2.amazonaws.com/glammycar/"+makeup.images[0].image)
                      .d-flex.flex-col.mt-20
                        span.mb-15 #{makeup.name}
                        span.bold &#8373; #{makeup.price}
                        if makeup.variants.length > 1
                          span.shop-color /Shop #{makeup.variants.length} colors/  

                                        
        section.g-list-cont
          h3.text-center  Men's Collection
          ul.g-list 
            if mens                     
              for men in mens
                  li.g-list-item
                    a.g-list-item(href="/"+men.url+'/'+men._id)
                      .g-list-img.d-flex.flex-col.align-items-center.justify-center
                        if men.images.length >= 1 
                      img.control(src="https://s3.eu-west-2.amazonaws.com/glammycar/"+men.images[0].image)
                      .d-flex.flex-col.mt-20
                        span.mb-15 #{men.name}
                        span.bold &#8373; #{men.price}
                        if men.variants.length > 1
                          span.shop-color /Shop #{men.variants.length} colors/  
  include partials/footer.pug

  
