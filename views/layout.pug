doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/fonts/slick.svg')
  link(rel='stylesheet',href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.0/css/bootstrap-reboot.min.css")
  link(href='https://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet')
  link(rel='stylesheet',href='/stylesheets/style.css')
  link(rel='stylesheet',href='/stylesheets/xzoom.css')
  script(src='https://code.jquery.com/jquery-3.3.1.js', integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=', crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')
  script(src="/javascripts/xzoom.min.js")


  
body

  header.main-header.d-flex.align-items-center
      section.home-menu-cont.d-flex.justify-center.align-items-center 
        a.logo.mr-auto(href="/") 
          img#logo-img(src="/images/logo.svg")
        
        button.menu.transparent.no-border(type='button')
          img#menu-img(src="/images/menu.svg")
         
      form.rel.ml-auto#form-search(method='get',action='/search')
        input#search-field(type='text',placeholder="Search")
        button.search.transparent.no-border.abs
          img#search-img(src='/images/search.svg')
      div.wish-bg.mr-15.bg-white
        button.wishlist.transparent.no-border.rel.p-0(type='button')
          img#wishlist-img(src='/images/wishlist.svg')
          span.no-items#no-wishlist-items.abs
            |0 
      .basket-bg.mr-15.bg-white.p-0
        a.basket.transparent.no-border.rel(href="/basket")
          img#basket-img(src="/images/basket.svg")
          span.no-items#no-bag-items.abs
            if basket 
              |#{basket.total_num_of_items}
            else
              |0 
      
  include partials/nav.pug
  
  block content
  
  script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js")
  script(src="/javascripts/script.js")
